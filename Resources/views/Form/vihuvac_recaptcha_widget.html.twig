{% block vihuvac_recaptcha_widget %}
    {% spaceless %}
        {% if form.vars.vihuvac_recaptcha_enabled %}
            {% if attr.options is defined %}
                <script type="text/javascript">
                    var onloadCallback = function() {
                        grecaptcha.render(
                            "recaptcha", {
                                "sitekey" : "{{ form.vars.site_key }}",
                                "theme"   : "{{ form.vars.attr.options.theme }}"
                            }
                        );
                    };
                </script>
            {% endif %}
            <script type="text/javascript" src="{{ form.vars.url_api_server }}" async defer></script>
            <div id="recaptcha"></div>
        {% endif %}
    {% endspaceless %}
{% endblock vihuvac_recaptcha_widget %}
